<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visitor Statistics Chart</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        html, body {
            overflow: auto; /* Ensure scrolling is enabled */
            height: auto; /* Remove any fixed height that might be preventing scrolling */
        }
    </style>
</head>
<body>
<div class="glass-4">
    <canvas id="myChart" width="400" height="400"></canvas>
</div>
<script>
    const CHART_COLORS = {
        red: 'rgb(255, 99, 132)',
        blue: 'rgb(54, 162, 235)',
        yellow: 'rgb(255, 205, 86)'
    };

    // Simulating visitor data for the last 12 days
    const DATA_COUNT = 12;
    const labels = [];
    for (let i = DATA_COUNT; i > 0; --i) {
        labels.push(`Day ${i}`);
    }

    // Generating fake visitor data
    const visitorsData = [152, 128, 134, 121, 139, 145, 160, 155, 140, 135, 150, 165];

    const data = {
        labels: labels,
        datasets: [{
            label: 'Visitors per Day',
            data: visitorsData,
            borderColor: CHART_COLORS.blue,
            backgroundColor: CHART_COLORS.yellow,
            fill: true,
        }]
    };

    // Chart configuration
    const config = {
        type: 'line',
        data: data,
        options: {
            responsive: true,
            plugins: {
                title: {
                    display: true,
                    text: 'Visitor Statistics'
                },
            },
            interaction: {
                intersect: false,
            },
            scales: {
                x: {
                    display: true,
                    title: {
                        display: true,
                        text: 'Day'
                    }
                },
                y: {
                    display: true,
                    title: {
                        display: true,
                        text: 'Visitors'
                    },
                    suggestedMin: 100, // Adjust based on your data
                    suggestedMax: 200 // Adjust based on your data
                }
            }
        },
    };

    // Initialize Chart
    var myChart = new Chart(
        document.getElementById('myChart').getContext('2d'),
        config
    );
</script>
</body>
</html>
